generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String               @id @default(cuid())
  name         String?
  email        String               @unique
  password     String
  phone        String?
  address      String?
  city         String?
  role         Role                 @default(CUSTOMER)
  isActive     Boolean              @default(true)
  createdAt    DateTime             @default(now())
  updatedAt    DateTime             @updatedAt
  cartItems    CartItem[]           @relation("UserCartItems")
  orders       Order[]              @relation("UserOrders")
  interactions ProductInteraction[]
  reviews      Review[]             @relation("UserReviews")
}

model Category {
  id          String      @id @default(cuid())
  name        String
  description String?
  image       String?
  createdAt   DateTime    @default(now())
  products    Product[]   @relation("CategoryProducts")
  specFields  SpecField[] @relation("CategorySpecFields")
}

model SpecField {
  id         String      @id @default(cuid())
  name       String
  type       String      @default("TEXT")
  required   Boolean     @default(false)
  unit       String?
  categoryId String
  category   Category    @relation("CategorySpecFields", fields: [categoryId], references: [id], onDelete: Cascade)
  values     SpecValue[] @relation("SpecFieldValues")
}

model Product {
  id           String               @id @default(cuid())
  name         String
  description  String
  price        Float
  stock        Int
  image        String
  categoryId   String
  createdAt    DateTime             @default(now())
  updatedAt    DateTime             @updatedAt
  cartItems    CartItem[]           @relation("ProductCartItems")
  orderItems   OrderItem[]          @relation("ProductOrderItems")
  category     Category             @relation("CategoryProducts", fields: [categoryId], references: [id], onDelete: Cascade)
  interactions ProductInteraction[]
  reviews      Review[]             @relation("ProductReviews")
  specs        SpecValue[]          @relation("ProductSpecValues")
}

model SpecValue {
  id          String    @id @default(cuid())
  productId   String
  specFieldId String
  value       String
  product     Product   @relation("ProductSpecValues", fields: [productId], references: [id], onDelete: Cascade)
  specField   SpecField @relation("SpecFieldValues", fields: [specFieldId], references: [id], onDelete: Cascade)
}

model CartItem {
  id        String   @id @default(cuid())
  userId    String
  productId String
  quantity  Int
  createdAt DateTime @default(now())
  product   Product  @relation("ProductCartItems", fields: [productId], references: [id], onDelete: Cascade)
  user      User     @relation("UserCartItems", fields: [userId], references: [id], onDelete: Cascade)
}

model Order {
  id               String        @id @default(cuid())
  userId           String
  totalPrice       Float
  status           OrderStatus   @default(PENDING)
  paymentStatus    PaymentStatus @default(PENDING)
  createdAt        DateTime      @default(now())
  updatedAt        DateTime      @updatedAt
  paypalOrderId    String?
  paidAt           DateTime?
  transactionId    String?
  paymentMethod    String?
  ghnOrderCode     String?
  shippingName     String?
  shippingPhone    String?
  shippingAddress  String?
  shippingProvince String?
  shippingDistrict String?
  shippingWard     String?
  shippingFee      Float         @default(0)
  user             User          @relation("UserOrders", fields: [userId], references: [id], onDelete: Cascade)
  orderItems       OrderItem[]   @relation("OrderOrderItems")
}

model OrderItem {
  id        String  @id @default(cuid())
  orderId   String
  productId String
  quantity  Int
  price     Float
  order     Order   @relation("OrderOrderItems", fields: [orderId], references: [id], onDelete: Cascade)
  product   Product @relation("ProductOrderItems", fields: [productId], references: [id], onDelete: Cascade)
}

model Review {
  id        String   @id @default(cuid())
  productId String
  userId    String
  rating    Int
  comment   String
  createdAt DateTime @default(now())
  product   Product  @relation("ProductReviews", fields: [productId], references: [id], onDelete: Cascade)
  user      User     @relation("UserReviews", fields: [userId], references: [id], onDelete: Cascade)
}

model ProductInteraction {
  id          String   @id @default(cuid())
  userId      String
  productId   String
  viewedAt    DateTime @default(now())
  liked       Boolean  @default(false)
  addedToCart Boolean  @default(false)
  purchased   Boolean  @default(false)
  product     Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

enum Role {
  CUSTOMER
  ADMIN
}

enum OrderStatus {
  PENDING
  PROCESSING
  SHIPPING
  COMPLETED
  CANCELLED
}

enum PaymentStatus {
  PENDING
  PAID
  REFUNDED
}
